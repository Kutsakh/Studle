@{
  Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head {
  @await RenderSectionAsync("Head", required: false)
}

@section Scripts {
  @await RenderSectionAsync("Scripts", required: false)
}

<div class="flex">
  <div class="flex flex-col flex-shrink-1 self-stretch md:w-64 min-h-screen py-8 bg-white border-r dark:bg-gray-800 dark:border-gray-600 sticky top-0">
    @await RenderSectionAsync("Sidebar", required: true)
  </div>
  <div class="flex flex-col p-6 flex-grow md:p-8 lg:p-10 overflow-x-hidden">
    @RenderBody()
  </div>
</div>